dia = int(input("Elija un numero del 1 al 7: "))
if dia == 1:
    print("Hoy es domingo")
elif dia == 2:
    print("Hoy es lunes")
elif dia == 3:
    print("Hoy es martes")
elif dia == 4:
    print("Hoy es miercoles")
elif dia == 5:
    print("Hoy es jueves")
elif dia == 6:
    print("Hoy es viernes")
elif dia == 7:
    print("Hoy es sabado")
else:
    print("Ingreso un numero incorrecto")
